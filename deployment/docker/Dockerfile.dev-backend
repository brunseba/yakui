FROM node:22-alpine

# Set working directory
WORKDIR /app

# Install curl for healthchecks and create directories early
RUN apk add --no-cache curl && \
    mkdir -p /home/node/.kube && \
    chown -R node:node /home/node/.kube

# Copy package files for dependency installation
COPY ../../package.json ../../package-lock.json ./

# Install dependencies with exact versions from lock file (with BuildKit cache)
RUN --mount=type=cache,target=/root/.npm \
    npm ci && \
    npm cache clean --force

# Switch to node user early to avoid ownership issues
USER node

# Copy source code (this will be rebuilt when code changes)
COPY --chown=node:node ../../app ./app
COPY --chown=node:node ../../config ./config
COPY --chown=node:node ../../tools ./tools

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
  CMD curl -f http://localhost:3001/api/health || exit 1

# Start development API server
CMD ["npm", "run", "dev:api"]