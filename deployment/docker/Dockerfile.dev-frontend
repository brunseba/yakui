FROM node:22-alpine AS development

# Set working directory
WORKDIR /app

# Install curl and create user early
RUN apk add --no-cache curl && \
    addgroup -g 1001 -S nodejs && \
    adduser -S frontend -u 1001 -G nodejs

# Copy package files for dependency installation
COPY ../../package.json ../../package-lock.json ./

# Install dependencies with exact versions from lock file (with BuildKit cache)
RUN --mount=type=cache,target=/root/.npm \
    npm ci && \
    npm cache clean --force

# Switch to non-root user early
USER frontend

# Copy source code with correct ownership (this will be rebuilt when code changes)
COPY --chown=frontend:nodejs ../../app ./app
COPY --chown=frontend:nodejs ../../config ./config
COPY --chown=frontend:nodejs ../../tools ./tools

# Expose port
EXPOSE 5173

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:5173 || exit 1

# Start development server
CMD ["npm", "run", "dev"]