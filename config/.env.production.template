# Kubernetes Admin UI - Production Configuration Template
# Copy this file to .env.production and configure with your production values

# API Configuration
VITE_API_BASE_URL=/api
VITE_API_TIMEOUT=30000
VITE_API_RETRIES=3

# Cluster Configuration
VITE_CLUSTER_CONTEXT=production-cluster
VITE_CONNECTION_TIMEOUT=10000
VITE_SERVER_MASK_PATTERN=****

# UI Configuration
VITE_REFRESH_INTERVAL=30000
VITE_MAX_LOG_LINES=500
VITE_DEFAULT_PAGE_SIZE=50

# Feature Flags - Production (secure defaults)
VITE_PROD_ENABLE_STUB_FEATURES=false
VITE_PROD_ENABLE_METRICS=true
VITE_PROD_ENABLE_LOGS=true
VITE_PROD_ENABLE_SERVER_MASKING=true
VITE_PROD_LOG_SENSITIVE_DATA=false

# Application Configuration
VITE_APP_NAME=Kubernetes Admin UI
VITE_SUPPORT_EMAIL=support@yourcompany.com
VITE_BACKEND_URL=your-backend-service:3001

# Resource Template Defaults
VITE_DEFAULT_APP_NAME=app
VITE_DEFAULT_CONTAINER_IMAGE=nginx:stable
VITE_DEFAULT_REPLICAS=2
VITE_DEFAULT_MEMORY_REQUEST=128Mi
VITE_DEFAULT_MEMORY_LIMIT=256Mi
VITE_DEFAULT_CPU_REQUEST=100m
VITE_DEFAULT_CPU_LIMIT=200m
VITE_DEFAULT_DB_HOST=database-service
VITE_DEFAULT_DB_PORT=5432
VITE_DEFAULT_DEBUG_MODE=false
VITE_DEFAULT_LOG_LEVEL=info

# Security Configuration (Optional - remove if not using mock data in production)
# VITE_SECURITY_AUTH_ENABLED=false
# VITE_SECURITY_VALIDATION_ENABLED=true
# VITE_SECURITY_DATA_ENABLED=true

# Demo Configuration (Disable in production)
# VITE_DEMO_SA_NAME=demo-service-account
# VITE_DEMO_SA_NAMESPACE=demo
# VITE_DEMO_APP_NAME=demo-app
# VITE_DEMO_ENVIRONMENT=production

# Backend Configuration
NODE_ENV=production
API_PORT=3001
API_TIMEOUT=30000
CLUSTER_CONTEXT=production-cluster